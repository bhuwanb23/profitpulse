# SuperHack AI Platform - Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=superhack_db
DB_USER=superhack_user
DB_PASSWORD=superhack_password
DB_URL=postgresql://superhack_user:superhack_password@localhost:5432/superhack_db

# Application Configuration
NODE_ENV=development
PORT=3000
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production
JWT_EXPIRES_IN=7d

# AI/ML Configuration
AI_MODEL_PATH=./ai-ml/models
AI_CONFIDENCE_THRESHOLD=0.7
AI_SERVICE_PORT=5000

# Integration APIs
# SuperOps Configuration (GraphQL API)
SUPEROPS_API_BASE_URL=https://api.superops.ai/it
SUPEROPS_API_KEY=your_superops_api_key_here
SUPEROPS_TENANT_ID=your_superops_tenant_id_here

# QuickBooks Configuration (REST API with OAuth 2.0)
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id_here
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret_here
QUICKBOOKS_REDIRECT_URI=http://localhost:8000/auth/quickbooks/callback
QUICKBOOKS_COMPANY_ID=your_quickbooks_company_id_here
QUICKBOOKS_USE_SANDBOX=true

# Token Management
ENCRYPTION_KEY=your_32_character_encryption_key_here
DATABASE_URL=sqlite:///./ai-ml/superhack_ai.db

ZAPIER_WEBHOOK_URL=your_zapier_webhook_url_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File Upload Configuration
UPLOAD_MAX_SIZE=10MB
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security Configuration
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Feature Flags
ENABLE_AI_ANALYTICS=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBHOOK_NOTIFICATIONS=true
